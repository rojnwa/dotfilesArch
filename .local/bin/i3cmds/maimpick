#!/bin/sh
case "$(printf "a selected area\\ncurrent window\\nfull screen\\na selected area (copy)\\ncurrent window (copy)\\nfull screen (copy)" | dmenu -l 6 -i -p "Screenshot which area?")" in
	"a selected area") sleep 0.5 && maim -s pic-selected-"$(date '+%y%m%d-%H%M-%S').png" && notify-send " Screenshot taken" ;;
	"current window") sleep 0.5 && maim -i "$(xdotool getactivewindow)" pic-window-"$(date '+%y%m%d-%H%M-%S').png" && notify-send " Screenshot taken" ;;
	"full screen") sleep 0.5 && maim pic-full-"$(date '+%y%m%d-%H%M-%S').png" && notify-send " Screenshot taken" ;;
	"a selected area (copy)") sleep 0.5 && maim -s | xclip -selection clipboard -t image/png && notify-send " Screenshot taken" ;;
	"current window (copy)") sleep 0.5 && maim -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png && notify-send " Screenshot taken" ;;
	"full screen (copy)") sleep 0.5 && maim | xclip -selection clipboard -t image/png && notify-send " Screenshot taken" ;;
esac
