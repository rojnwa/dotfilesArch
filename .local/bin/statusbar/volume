#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e pulsemixer & ;;
	2) pulsemixer --toggle-mute ;;
	4) pulsemixer --change-volume +5 ;;
	5) pulsemixer --change-volume -5 ;;
	3) pgrep -x dunst >/dev/null && notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change."
esac

mic=$(amixer get Capture | grep -wo off | wc -w)

if [ "$mic" -eq "0" ]; then
	micon="ï„°"
else
	micon="ï„±"
fi

[ "$(pulsemixer --get-mute)" = "1" ] && printf "ïš© %s\\n" "$micon" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -gt "70" ]; then
	icon="ï€¨"
elif [ "$vol" -lt "30" ]; then
	icon="ï€¦"
else
	icon="ï€§"
fi


printf "%s %s%% %s\\n" "$icon" "$vol" "$micon"
